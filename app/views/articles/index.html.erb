<div class="l-body">
  <%# ヘッダー %>
  <div class="header">
    <%= render "shared/viewer-header"%>
  </div>
  <%# /ヘッダー %>


  <%#= ヘッダー写真(付けるなら) %>
  <%#= ヘッダー写真 %>


  <%# メイン %>
  <div class="article-index-main">

    <%# カテゴリーリンク欄 %>
    <div class="main-category-link-list">
      <div class="main-category-links">
        <ul>
          <li class="main-category-link" id="category-link-1" data-num="1">
            全て
          </li>
          <% if @categories.present? %>
            <% @categories.each do |category| %>
              <li class="main-category-link" id="category-link-1" data-num="<%= @num %>">
                <%= category.name %>
              </li>
              <% @num += 1 %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
    <%# カテゴリーリンク欄 %>

    <%# 記事一覧 %>
    <div class="index-article-contents-list">
      <div class="index-article-contents view-first-category" data-num="1">
        <%# if @articles.present? %>
          <%# @articles.each do |article| %>
            <%# link_to article_path(article) do %>
              <div class="index-article">
                <div class="index-article-image">
                  <%#= image_tag article.image %>
                  サムネイル
                  <div class="index-article-image-category">
                    <%#= article.category.name %>
                    <span>カテゴリー名</span>
                  </div>                
                </div>
                <div class="index-article-content">
                  <div class="index-article-title">
                    <%#= article.title %>
                    <span>タイトル1</span>
                  </div>
                  <div class="index-article-content-line">
                    <%#= article.content %>
                    テキストの一部が表示されます
                  </div>
                </div>
              </div>
            <%# end %>
          <%# end %>
        <%# end %>

        <%# 仮のためあとで消す %>
        <%= render "shared/category_sample" %>
        <%# 仮のためあとで消す %>

      </div>
      <%= render "shared/category" %>
    </div>
    <%# /記事一覧 %>

    <%# ページネーション %>
    <div class="pagination">

    </div>
    <%# /ページネーション %>
  </div>
  <%# /メイン %>
</div>

  <%# フッター %>
  <div class="footer">
    <%= render "shared/viewer-footer" %>
  </div>
  <%# /フッター %>
</div>