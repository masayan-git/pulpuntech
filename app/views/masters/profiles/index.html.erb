<h1>Masters Profiles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @masters_profiles.each do |masters_profile| %>
      <p><%= masters_profile.master.name %>
      <%= link_to 'Show', [:masters,masters_profile] %>
      <%= link_to 'Edit', edit_masters_profile_path(masters_profile) %>
      <%= link_to 'Destroy', [:masters,masters_profile], method: :delete, data: { confirm: '削除しますか？' } %>
      
    <% end %>
  </tbody>
</table>

