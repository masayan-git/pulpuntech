<div class="l-body">
  <%# ヘッダー %>
  <div class="header">
    <%= render "shared/viewer-header"%>
  </div>
  <%# /ヘッダー %>


  <%#= ヘッダー写真(付けるなら) %>
  <%#= ヘッダー写真 %>


  <%# メイン %>
  <div class="home-moain">

    <%# カテゴリーリンク欄 %>
    <div class="main-category-link-list">
      <div class="main-category-links">
        <ul>
          <%# if @categories.present? %>
            <%# @categories.each do |category| %>
            <li class="main-category-link">
              <%#= category.name %>
              <span>カテゴリー１</span>
            </li>
            <%# end %>
          <%# end %>

          <%# 仮のため後で消す %>
            <li class="main-category-link">
              <span>カテゴリー２</span>
            </li>
            <li class="main-category-link">
              <span>かてごりー３</span>
            </li>
            <li class="main-category-link">
              <span>カテゴリー４</span>
            </li>
          <%# /仮のため後で消す %>
        </ul>
      </div>
    </div>
    <%# カテゴリーリンク欄 %>

    <%# 記事一覧 %>
    <div class="index-article-contents-list">
      <div class="index-article-contents">
        <%# if @articles.present? %>
          <%# @articles.each do |article| %>
            <div class="index-article-image">
              <%#= image_tag article.image %>
              サムネイル
            </div>
            <div class="index-artice-content">
              <div class="index-article-title">
                <%#= article.title %>
                タイトル
              </div>
              <div class="index-artic¥le-content-line">
                <%#= article.content %>
                テキストの一部が表示されます
              </div>
            </div>
          <%# end %>
        <%# end %>
      </div>
    </div>
    <%# /記事一覧 %>

    <%# ページネーション %>
    <div class="pagenation">
      ページネーション
    </div>
    <%# /ページネーション %>
  </div>
  <%# /メイン %>

  <%# フッター %>
  <div class="footer">
    <%= render "shared/viewer-footer" %>
  </div>
  <%# /フッター %>
</div>
